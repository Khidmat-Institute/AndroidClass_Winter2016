<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <FrameLayout
        android:id="@android:id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/tabColor2">


            <TextView
                android:id="@+id/tab_jackets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/tab_one_icon"
                android:layout_weight="1"
                android:padding="16dp"
                android:textAlignment="center"
                android:text="Jackets"
                android:textColor="@color/white"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:contextClickable="true"/>

            <TextView
                android:id="@+id/tab_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/tab_two_icon"
                android:layout_weight="1"
                android:padding="16dp"
                android:textAlignment="center"
                android:text="Colour"
                android:textColor="@color/white"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:contextClickable="true"/>

            <TextView
                android:id="@+id/tab_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/tab_three_icon"
                android:layout_weight="1"
                android:padding="16dp"
                android:textAlignment="center"
                android:text="Size"
                android:textColor="@color/white"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:contextClickable="true"/>


        </LinearLayout>

    </FrameLayout>

</LinearLayout>