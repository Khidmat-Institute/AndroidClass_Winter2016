<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent" 
android:orientation="vertical"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="ca.khuddam.android_winter2016.activities.FragmentHandlerActivity">

<FrameLayout
    android:id="@+id/headerJacketMart"
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="0dp"
    android:layout_weight="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JACKET MART"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColorHighlight="#30d8b9"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textColor="#f57f09" />

</FrameLayout>

<FrameLayout
    android:id="@+id/colorGroupContainer"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="0dp"
    android:layout_weight="4">

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2">
    <TextView
        android:id="@+id/colorTextView"
        android:layout_gravity="left|top"
        android:text="Select Color"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/colorGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_gravity="left|top"
        android:weightSum="1">

        <RadioButton
            android:id="@+id/greenRadioButton"
            android:layout_width="120dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Green Color"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="#2ff204" />

        <RadioButton
            android:id="@+id/blueRadioButton"
            android:layout_width="120dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:background="#0419fc"
            android:checked="false"
            android:text="Blue Color"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_weight="0.34" />

        <RadioButton
            android:id="@+id/redRadioButton"
            android:layout_width="120dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:background="#fe0303"
            android:checked="false"
            android:text="Red Color"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </RadioGroup>


    <TextView
        android:id="@+id/sizeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left|top"
        android:text="Select Size"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/sizeGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="left|top">

        <RadioButton
            android:id="@+id/smallRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:checked="true"
            android:text="Small Size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/mediumRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:checked="false"
            android:text="Medium Size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/largeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:checked="false"
            android:text="Large Size"
            android:textStyle="bold" />

    </RadioGroup>


</GridLayout>
    </FrameLayout>
</LinearLayout>
