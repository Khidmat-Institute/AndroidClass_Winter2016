<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#6ca0cf"
                android:centerColor="#3479bf"
                android:endColor="#1061c3"
                android:angle="90"/>
            <corners android:topLeftRadius="20dp"
                android:bottomRightRadius="20dp" />
            <stroke android:width="1dp"
                android:color="#3a71a2"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#0051b3"
                android:centerColor="#3479bf"
                android:endColor="#8cc0ef"
                android:angle="90"/>
            <corners android:topLeftRadius="20dp"
                android:bottomRightRadius="20dp" />
            <stroke android:width="1dp"
                android:color="#1a5182"/>
        </shape>
    </item>
</selector>